<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_vis"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/cardview_visita_background"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/data_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2016-08-30"
            android:gravity="top|center"
            android:textColor="@color/windowBackground"
            android:textSize="18dp"
            android:layout_margin="6dp"/>
        <TextView
            android:id="@+id/text_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="false"
            android:text="Ultima richiesta di visita specialistica"
            android:gravity="center"
            android:textColor="@color/windowBackground"
            android:textSize="18sp"
            android:layout_margin="6dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>